{
    "compilerOptions": {
        "module": "Node16",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES6",
        "noImplicitAny": true,
        "moduleResolution": "Node16",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types/*",
            "src/types/*"
        ]
    },
    "include": [
        "src/**/*"
    ]
}